@model FinalFcp.Models.Serie

@{
    ViewData["Title"] = "Detalles Series";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl py-5">
    <div class="container">
        <h1>Detalles de la Serie</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Título</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Titulo)
                </dd>
                <dt class="col-sm-2">Sinopsis</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Sinopsis)
                </dd>
                <dt class="col-sm-2">Director</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Director)
                </dd>
                <dt class="col-sm-2">Duración</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Duracion)
                </dd>
                <dt class="col-sm-2">Fecha de Estreno</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaEstreno)
                </dd>
                <dt class="col-sm-2">Usuario Registro</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UsuarioRegistro)
                </dd>

            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-solid fa-pen-to-square"></i> Editar</a> |
            <a asp-action="Index"><i class="fa-solid fa-backward"></i> Volver a la lista</a>
        </div>
    </div>
</div>